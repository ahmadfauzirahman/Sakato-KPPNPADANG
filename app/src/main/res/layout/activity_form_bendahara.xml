<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4cce4"
    tools:context=".ProfilePerbendaharaan">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_berita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="#e4cce4"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/cardview_default_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="160dp"
                android:layout_height="220dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:padding="5dp"
                app:srcCompat="@drawable/profile_image" />

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivProfile"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/imageView_userIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#862588"
                    android:padding="8dp"
                    android:src="@drawable/img_user"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/etNamaBendaharaadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_userIcon"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_userIcon"
                    android:background="@color/editTextBG"
                    android:hint="Nama Pejabat Perbendaharaan"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/imageView_userIcon1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#862588"
                    android:padding="8dp"
                    android:src="@drawable/positive_vote"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/etJabatanPerbendaharanadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_userIcon1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_userIcon1"
                    android:background="@color/editTextBG"
                    android:hint="Jabatan"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/etJabatanPerbendaharanadd"
                    android:layout_marginTop="5dp"
                    android:padding="2dp"
                    android:text="@string/format"
                    android:textColor="#862588"
                    android:textSize="10dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout2"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/imageView_userIcon3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#862588"
                    android:padding="8dp"
                    android:src="@drawable/ic_email_black_24dp"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/etEmailadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_userIcon3"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_userIcon3"
                    android:background="@color/editTextBG"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/imageView_userIcon4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#862588"
                    android:padding="8dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:tint="@color/white" />

                <EditText
                    android:id="@+id/etNoHpadd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView_userIcon4"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView_userIcon4"
                    android:background="@color/editTextBG"
                    android:hint="No Handphone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:paddingLeft="20dp"
                    android:textSize="15sp" />
            </RelativeLayout>
            <Button
                android:id="@+id/btntambahperbendaharaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout4"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#862588"
                android:fontFamily="sans-serif-medium"
                android:text="SAVE"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>