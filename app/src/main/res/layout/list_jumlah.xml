<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_berita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:background="#e4cce4"
        android:elevation="0.1dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:id="@+id/lJumlahLoket"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mNomorAntrian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="@color/colorPrimary"
                android:textSize="60dip"
                android:paddingTop="20dp"
                android:gravity="center"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/mNomorLoket"
                android:layout_width="match_parent"
                android:paddingTop="4dp"
                android:layout_height="match_parent"
                android:text="Nomor Loket 1"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#9474CC"
                android:textSize="40dip"></TextView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
